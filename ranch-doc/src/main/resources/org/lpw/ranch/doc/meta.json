{
    "key": "ranch.doc",
    "props": [
        {
            "name": "author",
            "type": "read-only",
            "valueKey": "name",
            "ignore": [
                "lite-query",
                "lite-create",
                "lite-modify"
            ]
        },
        {
            "name": "sort"
        },
        {
            "name": "subject"
        },
        {
            "name": "image",
            "type": "image"
        },
        {
            "name": "summary",
            "type": "text-area"
        },
        {
            "name": "label",
            "ignore": [
                "lite-query",
                "lite-create",
                "lite-modify"
            ]
        },
        {
            "name": "type",
            "ignore": [
                "lite-query",
                "lite-create",
                "lite-modify"
            ]
        },
        {
            "name": "source",
            "type": "editor"
        },
        {
            "name": "read",
            "type": "read-only"
        },
        {
            "name": "favorite",
            "type": "read-only"
        },
        {
            "name": "comment",
            "type": "read-only"
        },
        {
            "name": "praise",
            "type": "read-only"
        },
        {
            "name": "score",
            "type": "read-only"
        },
        {
            "name": "time",
            "type": "read-only"
        },
        {
            "name": "audit",
            "labels": ".audits",
            "ignore": [
                "create",
                "modify",
                "lite-create",
                "lite-modify"
            ]
        }
    ],
    "query": {
        "type": "grid",
        "ops": [
            {
                "type": "modify"
            },
            {
                "type": "pass",
                "service": ".pass",
                "success": ".query",
                "when": "row.audit!==1"
            },
            {
                "type": "reject",
                "service": ".reject",
                "success": ".query",
                "when": "row.audit!==2"
            },
            {
                "type": "delete",
                "service": ".delete",
                "success": ".query"
            }
        ],
        "toolbar": [
            {
                "type": "create"
            }
        ]
    },
    "create": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".query"
            }
        ]
    },
    "modify": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".query"
            }
        ]
    },
    "lite-query": {
        "service": "query",
        "type": "grid",
        "search": [
            {
                "name": "subject"
            },
            {
                "name": "audit"
            }
        ],
        "ops": [
            {
                "type": "lite-modify"
            },
            {
                "type": "pass",
                "service": ".pass",
                "success": ".lite-query",
                "when": "row.audit!==1"
            },
            {
                "type": "reject",
                "service": ".reject",
                "success": ".lite-query",
                "when": "row.audit!==2"
            },
            {
                "type": "delete",
                "service": ".delete",
                "success": ".lite-query"
            }
        ],
        "toolbar": [
            {
                "type": "lite-create"
            }
        ]
    },
    "lite-create": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".lite-query"
            }
        ]
    },
    "lite-modify": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".lite-query"
            }
        ]
    }
}
