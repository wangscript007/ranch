{
    "key": "ranch.classify",
    "uri": "/classify/",
    "props": [
        {
            "name": "code",
            "ignore": [
                "find",
                "find-editor"
            ]
        },
        {
            "name": "key",
            "ignore": [
                "find",
                "find-editor"
            ]
        },
        {
            "name": "name"
        },
        {
            "name": "value",
            "type": "text-area",
            "ignore": [
                "find-editor"
            ]
        },
        {
            "name": "value",
            "type": "editor",
            "ignore": [
                "create",
                "modify",
                "find"
            ]
        }
    ],
    "query": {
        "type": "grid",
        "ops": [
            {
                "type": "modify"
            },
            {
                "type": "delete",
                "service": ".delete",
                "success": ".query"
            }
        ],
        "toolbar": [
            {
                "type": "create"
            }
        ]
    },
    "create": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".query"
            }
        ]
    },
    "modify": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".query"
            }
        ]
    },
    "find": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".save",
                "success": ".find"
            }
        ]
    },
    "find-editor": {
        "service": "find",
        "type": "form",
        "columns": [
            {
                "name": "name"
            },
            {
                "name": "value",
                "type": "editor"
            }
        ],
        "toolbar": [
            {
                "type": "save",
                "service": "save",
                "success": "find-editor"
            }
        ]
    }
}
