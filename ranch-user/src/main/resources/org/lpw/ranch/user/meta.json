{
    "key": "ranch.user",
    "uri": "/user/",
    "props": [
        {
            "name": "portrait",
            "type": "image"
        },
        {
            "name": "idcard"
        },
        {
            "name": "name"
        },
        {
            "name": "nick"
        },
        {
            "name": "mobile"
        },
        {
            "name": "email"
        },
        {
            "name": "gender",
            "labels": ".genders"
        },
        {
            "name": "birthday",
            "type": "date"
        },
        {
            "name": "code",
            "type": "read-only"
        },
        {
            "name": "register",
            "type": "read-only"
        },
        {
            "name": "grade",
            "type": "read-only",
            "ignore": [
                "sign"
            ]
        },
        {
            "name": "state",
            "labels": ".states",
            "ignore": [
                "sign"
            ]
        }
    ],
    "query": {
        "type": "grid",
        "search": [
            {
                "name": "idcard"
            },
            {
                "name": "name"
            },
            {
                "name": "nick"
            },
            {
                "name": "mobile"
            },
            {
                "name": "email"
            },
            {
                "name": "code"
            },
            {
                "name": "register",
                "type": "date-range"
            },
            {
                "name": "state"
            }
        ],
        "ops": [
            {
                "service": "update"
            },
            {
                "type": "post",
                "label": "ranch.user.state.enable",
                "service": "state",
                "parameter": {
                    "state": 0
                },
                "success": "search",
                "when": "model.state==1"
            },
            {
                "type": "post",
                "label": "ranch.user.state.disable",
                "service": ".state",
                "parameter": {
                    "state": 1
                },
                "success": "search",
                "when": "model.state==0"
            },
            {
                "type": "post",
                "label": "ranch.user.manager",
                "service": ".grade",
                "parameter": {
                    "grade": 90
                },
                "success": "search",
                "when": "model.grade<90"
            },
            {
                "type": "post",
                "label": "ranch.user.manager.cancel",
                "service": ".grade",
                "parameter": {
                    "grade": 0
                },
                "success": "search",
                "when": "model.grade>=90"
            }
        ]
    },
    "update": {
        "type": "form",
        "toolbar": [
            {
                "type": "save",
                "service": ".update",
                "success": ".query"
            }
        ]
    },
    "sign": {
        "type": "form",
        "columns": [
            {
                "name": "portrait"
            },
            {
                "name": "idcard"
            },
            {
                "name": "name"
            },
            {
                "name": "nick"
            },
            {
                "name": "mobile"
            },
            {
                "name": "email"
            },
            {
                "name": "gender"
            },
            {
                "name": "birthday"
            },
            {
                "name": "code"
            },
            {
                "name": "register"
            }
        ],
        "toolbar": [
            {
                "service": "modify"
            }
        ]
    },
    "password": {
        "type": "password",
        "toolbar": [
            {
                "type": "modify",
                "icon": "save"
            }
        ]
    }
}
